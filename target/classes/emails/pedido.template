<html>
    <body>
        <table>
            <tr>
                <td style="width: 200px !important;">Número: </td>
                <td>$pedido.id</td>
            </tr>
            <tr>
                <td>Cliente: </td>
                <td>$pedido.cliente.nome</td>
            </tr>
            <tr>
                <td>Valor total: </td>
                <td>$numberTool.currency($pedido.valorTotal)</td>
            </tr>
        </table>
        <table border="1" cellspacing="0" cellpadding="3">
            <tr>
                <th>Produto</th>
                <th>Valor unitário</th>
                <th>Quantidade</th>
                <th>Valor total</th>
            </tr>
            #foreach ($item in $pedido.itens)
            	#if ($item.produto.id)
	            <tr>
	                <td>$item.produto.nome</td>
	                <td>$numberTool.currency($item.produto.valorUnitario)</td>
	                <td>$item.quantidade</td>
	                <td>$numberTool.currency($item.valorTotal)</td>
	            </tr>
            	#end
            #end
        </table>
    </body>
</html>